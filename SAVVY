function Sidebar() {
  const location = useLocation();
  return (
    <nav className="w-20 md:w-56 bg-white bg-opacity-70 rounded-r-3xl shadow-lg flex flex-col items-center py-8 fixed h-full z-10">
      <div className="mb-8 text-2xl font-bold text-brightblue">Savvy Spenders</div>
      <ul className="space-y-6 w-full">
        {navItems.map(item => (
          <li key={item.name}>
            <Link
              to={item.path}
              className={`flex items-center px-4 py-2 rounded-lg transition-all
                ${location.pathname === item.path ? 'bg-brightblue text-white font-bold' : 'text-brightblue hover:bg-accent hover:text-white'}`}
            >
              <span className="text-xl mr-4">{item.icon}</span>
              <span className="hidden md:inline">{item.name}</span>
            </Link>
          </li>
        ))}
      </ul>
      <div className="mt-auto text-xs text-gray-500 text-center px-2">
        Built by Achyuth Koneti
      </div>
    </nav>
  );
}

