export default DashboardPage;import React, { useState } from 'react';

function TaxCalculatorPage() {
  const [income, setIncome] = useState('');
  const [tax, setTax] = useState(null);

  const calculateTax = () => {
    let annual = parseInt(income) * 12;
    let taxAmount = 0;
    if (annual <= 12570) taxAmount = 0;
    else if (annual <= 50270) taxAmount = (annual - 12570) * 0.2;
    else taxAmount = (50270 - 12570) * 0.2 + (annual - 50270) * 0.4;
    setTax(taxAmount);
  };

  return (
    <div className="max-w-xl mx-auto mt-10 bg-white bg-opacity-90 rounded-3xl shadow-xl p-8">
      <h2 className="text-2xl font-bold text-brightblue mb-6">UK Income Tax Calculator</h2>
      <input type="number" placeholder="Monthly Income (¬£)" value={income} onChange={e => setIncome(e.target.value)} className="w-full p-3 rounded-lg border mb-4"/>
      <button onClick={calculateTax} className="w-full py-3 bg-brightblue text-white font-bold rounded-lg hover:bg-accent transition">Calculate Tax</button>
      {tax !== null && (
        <div className="mt-4 text-lg">
          Estimated Annual Tax: <span className="font-bold text-olivegreen">¬£{tax.toFixed(2)}</span>
        </div>
      )}
    </div>
  );
}

export default TaxCalculatorPage;import React, { useState } from 'react';

function PropertyFinderPage() {
  const [location, setLocation] = useState('');
  const [type, setType] = useState('rent');
  const [minPrice, setMinPrice] = useState('');
  const [maxPrice, setMaxPrice] = useState('');

  const buildRightmoveUrl = () => {
    let base = type === 'buy'
      ? 'https://www.rightmove.co.uk/property-for-sale/find.html'
      : 'https://www.rightmove.co.uk/property-to-rent/find.html';
    let params = `?locationIdentifier=OUTCODE%5E${encodeURIComponent(location)}&minPrice=${minPrice}&maxPrice=${maxPrice}`;
    return base + params;
  };

  return (
    <div className="max-w-xl mx-auto mt-10 bg-white bg-opacity-90 rounded-3xl shadow-xl p-8">
      <h2 className="text-2xl font-bold text-brightblue mb-6">Find Properties in Your Area</h2>
      <input type="text" placeholder="Location (e.g. London)" value={location} onChange={e => setLocation(e.target.value)} className="w-full p-3 rounded-lg border mb-4"/>
      <select value={type} onChange={e => setType(e.target.value)} className="w-full p-3 rounded-lg border mb-4">
        <option value="rent">Rent</option>
        <option value="buy">Buy</option>
      </select>
      <input type="number" placeholder="Min Price (¬£)" value={minPrice} onChange={e => setMinPrice(e.target.value)} className="w-full p-3 rounded-lg border mb-4"/>
      <input type="number" placeholder="Max Price (¬£)" value={maxPrice} onChange={e => setMaxPrice(e.target.value)} className="w-full p-3 rounded-lg border mb-4"/>
      <a
        href={buildRightmoveUrl()}
        target="_blank"
        rel="noopener noreferrer"
        className="w-full block py-3 bg-brightblue text-white font-bold rounded-lg hover:bg-accent mt-4 text-center"
      >
        Search on Rightmove
      </a>
    </div>
  );
}

